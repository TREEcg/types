{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noEmit": false,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist",
    },
    "files": [
        "index.ts",
    ],
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
    ],
}